# Definition for a binary tree node.
# class TreeNode(object):
#     def __init__(self, val=0, left=None, right=None):
#         self.val = val
#         self.left = left
#         self.right = right
class Solution(object):
    def largestValues(self, root):
        if not root:
            return[]
            
        q=deque()
        q.append(root)
        ans=[]

        while q:
            maxi=float('-inf')
            size=len(q)

            for i in range(size):
                node=q.popleft()
                maxi=max(node.val,maxi)

                if node.left:
                    q.append(node.left)
                if node.right:
                    q.append(node.right)

            ans.append(maxi)

        return ans
        
