def solveNQueens(n):
    result = []
    cols = set()
    diag1 = set()  # row - col
    diag2 = set()  # row + col

    def backtrack(row, board):
        # is_solution
        if row == n:
            result.append(board.copy())
            return

        # choices
        for col in range(n):
            # is_valid
            if col in cols or (row - col) in diag1 or (row + col) in diag2:
                continue

            # make_choice
            cols.add(col)
            diag1.add(row - col)
            diag2.add(row + col)
            board.append(col)

            backtrack(row + 1, board)

            # undo_choice
            cols.remove(col)
            diag1.remove(row - col)
            diag2.remove(row + col)
            board.pop()

    backtrack(0, [])
    return result
