class Solution(object):
    def findPeakElement(self, nums):
        start=0
        end=len(nums)-1

        while(start<end):
            mid = (start+end)//2
            if (nums[mid+1]<nums[mid] and nums[mid]>nums[mid-1]):
                return mid
            elif (nums[mid+1] > nums[mid]):
                start=mid+1
            
            else:
                end=mid
        
        return start
        
