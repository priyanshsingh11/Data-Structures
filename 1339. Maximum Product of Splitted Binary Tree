# Definition for a binary tree node.
# class TreeNode(object):
#     def __init__(self, val=0, left=None, right=None):
#         self.val = val
#         self.left = left
#         self.right = right
class Solution(object):
    def total(self,root):
        if not root:
            return 0
        return root.val + self.total(root.left) + self.total(root.right)
    
    def maxProduct(self, root):
        MOD = 10**9 + 7
        total_sum=self.total(root)

        self.best=0
        
        def dfs(node):
            if not node:
                return 0

            left = dfs(node.left)
            right = dfs(node.right)

            subtree_sum = node.val + left + right
            self.best = max(self.best, subtree_sum * (total_sum - subtree_sum))

            return subtree_sum

        dfs(root)
        return self.best % MOD
